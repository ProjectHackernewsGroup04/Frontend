<tr>
  <td bgcolor=#fafaf0 valign="top">
    <div class="arrow-up"></div>
    <a href='/item/{{story.id}}'><b>{{story.title}}</b></a>
    {{#if_not story.url ""}}
      <a href={{story.url}}>({{story.url}})</a>
    {{/if_not}}
  </td>
</tr>
<tr>
  <td bgcolor=#fafaf0>
    <span>{{story.score}} point by {{story.by.username}}</span>
    <span class="timeago" title="{{story.time}}">{{story.time}}</span>
    <span>| hide | past | web | favorite |
      <a href="/item/{{story.id}}"> {{#commcount}}{{/commcount}} comments </a>
    </span>
    <br><br>
  </td>
</tr>
<tr>
  <td bgcolor=#fafaf0>
    <p style="max-width: 375px">{{story.text}}</p>
  </td>
</tr>
<tr>
  <td bgcolor=#fafaf0>
    <form method="post" action="/comment">
      <input type="hidden" name="id" value="{{story.id}}">
      <input type="hidden" name="storyid" value={{story.id}}>
      <textarea name="text" rows="6" cols="60"></textarea>
      <br><br>
      <input type="submit" value="add comment">
    </form>
    <br><br>
  </td>
</tr>

{{#refresh}}{{/refresh}}

{{#listHelper story.kids 1 story.id}}
{{/listHelper}}
